<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guliash.calculator" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.guliash.calculator.CalculatorApplication">
        <activity
            android:name="com.guliash.calculator.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.guliash.calculator.SaveActivity"
            android:label="@string/title_activity_save" >
        </activity>
        <activity
            android:name="com.guliash.calculator.OpenActivity"
            android:label="@string/title_activity_open" >
        </activity>
        <activity
            android:name="com.guliash.calculator.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
