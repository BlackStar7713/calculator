<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@id/open_bracket_button"
                style="@style/CalculatorButton"
                android:text="@string/open_bracket" />

            <Button
                android:id="@id/close_bracket_button"
                style="@style/CalculatorButton"
                android:text="@string/close_bracket" />

            <Button
                android:id="@id/point_button"
                style="@style/CalculatorButton"
                android:text="@string/point" />

            <Button
                android:id="@id/comma_button"
                style="@style/CalculatorButton"
                android:text="@string/comma" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@id/plus_button"
                style="@style/CalculatorButton"
                android:text="@string/plus" />

            <Button
                android:id="@id/minus_button"
                style="@style/CalculatorButton"
                android:text="@string/minus" />

            <Button
                android:id="@id/times_button"
                style="@style/CalculatorButton"
                android:text="@string/times" />

            <Button
                android:id="@id/division_button"
                style="@style/CalculatorButton"
                android:text="@string/division" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/log_button"
                style="@style/CalculatorButton"
                android:text="@string/log" />

            <Button
                android:id="@+id/ln_button"
                style="@style/CalculatorButton"
                android:text="@string/ln" />

            <Button
                android:id="@+id/log10_button"
                style="@style/CalculatorButton"
                android:text="@string/log10" />

            <Button
                android:id="@+id/e_button"
                style="@style/CalculatorButton"
                android:text="@string/e" />
        </TableRow>
    </TableLayout>
</ScrollView>